<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ZametkiDetails">
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_layout">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Добавить новую заметку"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="26sp" />

        <ImageButton
            android:id="@+id/save_zametki_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/baseline_check_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar_layout"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginVertical="26dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/grey">
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zametki_title_text"
            android:hint="Название"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:layout_marginVertical="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zametki_content_text"
            android:minLines="15"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginVertical="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/delete_zametki_textview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_bold"
        android:text="Удалить данные"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>